<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="40sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/insertKey"
        android:textAlignment="center"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linearNumbersLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:textAlignment="center">

        <EditText
            android:id="@+id/numberOne"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionNext"
            android:inputType="number" />

        <EditText
            android:id="@+id/numberTwo"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionNext"

            android:inputType="number" />

        <EditText
            android:id="@+id/numberThree"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionNext"

            android:inputType="number" />

        <EditText
            android:id="@+id/numberFour"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionNext"

            android:inputType="number" />

        <EditText
            android:id="@+id/numberFive"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionNext"

            android:inputType="number" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearStarsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/numberStarOne"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionNext"

            android:inputType="number" />

        <EditText
            android:id="@+id/numberStarTwo"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:imeOptions="actionNext"

            android:inputType="number" />
    </LinearLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="100sp" />

    <Button
        android:id="@+id/btnGenerateKey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="handleGenerateKey"
        android:text="@string/generate_key" />

    <TextView
        android:id="@+id/tvNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20sp"
        android:text="@string/generated_numbers"
        android:textAlignment="center"
        android:textSize="20sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tvStars"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/generated_stars"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvAcertou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="center" />

</LinearLayout>